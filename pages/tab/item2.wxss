page {
  background-color: #f5f5f5;
  height: 100%;
  font-size: 28rpx;
  line-height: 1.8;
}
.container {
  margin-bottom: 10rpx;
  padding-bottom: 120rpx;
}
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  z-index: 100;
  background: #ffffff;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}
.header .title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}
.content {
  padding: 20rpx 24rpx;
}
.card {
  background: #ffffff;
  border-radius: 20rpx;
  margin-bottom: 24rpx;
  padding: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}
.card:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
  transition: all 0.2s ease;
}
.card .card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
}
.card .card-header .card-type {
  font-size: 26rpx;
  color: #2980b9;
  background: rgba(41, 128, 185, 0.1);
  padding: 6rpx 20rpx;
  border-radius: 24rpx;
}
.card .card-header .card-type.running {
  color: #27ae60;
  background: rgba(39, 174, 96, 0.1);
}
.card .card-header .card-type.stopped {
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
}
.card .card-header .status-info {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}
.card .card-header .status-info .speed {
  font-size: 32rpx;
  font-weight: bold;
  color: #2980b9;
  margin-bottom: 4rpx;
}
.card .card-header .status-info .temperature {
  font-size: 24rpx;
  color: #e67e22;
}
.card .card-body {
  padding: 0 4rpx;
}
.card .card-body .card-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 16rpx;
  display: block;
  line-height: 1.4;
}
.card .card-body .card-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}
.card .card-body .status-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}
.card .card-body .status-row .status-item {
  font-size: 24rpx;
  color: #95a5a6;
  background: #ecf0f1;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.card .card-body .fault-desc {
  font-size: 26rpx;
  color: #e74c3c;
  background: rgba(231, 76, 60, 0.1);
  padding: 8rpx 12rpx;
  border-radius: 8rpx;
  margin-top: 8rpx;
  display: block;
}
.card .card-footer {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 2rpx solid #f5f5f5;
}
.card .card-footer .post-time {
  font-size: 24rpx;
  color: #999;
}
.fab-button {
  position: fixed;
  right: 40rpx;
  bottom: 40rpx;
  width: 110rpx;
  height: 110rpx;
  background: linear-gradient(135deg, #3498db, #2980b9);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(41, 128, 185, 0.4);
  transition: all 0.3s ease;
}
.fab-button:active {
  -webkit-transform: scale(0.92);
          transform: scale(0.92);
}
.fab-button .iconfont {
  font-size: 52rpx;
  color: #ffffff;
}
