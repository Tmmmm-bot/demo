page {
  background-color: #f5f5f5;
  height: 100%;
}
.container {
  padding: 20rpx;
}
.crew-list .crew-item {
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
}
.crew-list .crew-item:active {
  -webkit-transform: scale(0.98);
          transform: scale(0.98);
  transition: all 0.2s ease;
}
.crew-list .crew-item .crew-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.crew-list .crew-item .crew-header .crew-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #2c3e50;
}
.crew-list .crew-item .crew-header .status-badge {
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #ffffff;
}
.crew-list .crew-item .crew-header .status-badge.standby {
  background-color: #f39c12;
}
.crew-list .crew-item .crew-header .status-badge.onduty {
  background-color: #27ae60;
}
.crew-list .crew-item .crew-header .status-badge.rest {
  background-color: #95a5a6;
}
.crew-list .crew-item .crew-info {
  margin-bottom: 16rpx;
}
.crew-list .crew-item .crew-info .driver-info {
  font-size: 28rpx;
  color: #34495e;
}
.crew-list .crew-item .route-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.crew-list .crew-item .route-info .route {
  font-size: 26rpx;
  color: #3498db;
  font-weight: 500;
}
.crew-list .crew-item .route-info .qualification {
  font-size: 24rpx;
  color: #e74c3c;
  background-color: rgba(231, 76, 60, 0.1);
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}
.crew-list .crew-item .detail-info {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}
.crew-list .crew-item .detail-info .experience {
  font-size: 24rpx;
  color: #7f8c8d;
}
.crew-list .crew-item .detail-info .update-time {
  font-size: 22rpx;
  color: #95a5a6;
}
.crew-list .crew-item .safety-info {
  border-top: 2rpx solid #ecf0f1;
  padding-top: 16rpx;
}
.crew-list .crew-item .safety-info .safety-text {
  font-size: 24rpx;
  color: #7f8c8d;
  line-height: 1.4;
}
