<view class="container"><view class="stats-section"><view class="stats-grid"><view data-event-opts="{{[['tap',[['showAll',['$event']]]]]}}" class="{{['stat-item','all-item',(currentFilter===-1)?'active':'']}}" bindtap="__e"><view class="stat-number">{{totalCount}}</view><view class="stat-label">全部</view></view><block wx:for="{{operationStats}}" wx:for-item="stat" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['filterByStatus',[index]]]]]}}" class="{{['stat-item',(currentFilter===index)?'active':'']}}" bindtap="__e"><view class="stat-number">{{stat.count}}</view><view class="stat-label">{{stat.text}}</view></view></block></view></view><view class="feedback-section"><button data-event-opts="{{[['tap',[['toFeedback',['$event']]]]]}}" class="feedback-btn" bindtap="__e"><text class="feedback-icon">💬</text><text class="feedback-text">意见反馈</text></button><button data-event-opts="{{[['tap',[['toOut',['$event']]]]]}}" style="margin-top:20rpx;background-color:cadetblue;color:#fff;" bindtap="__e"><text class="feedback-text">out 退出登录</text></button></view><view class="operation-section"><view class="section-header"><view class="section-title">作业列表</view><block wx:if="{{currentFilter!==-1}}"><view class="filter-status"><text class="filter-text">{{"筛选："+operationStats[currentFilter].text}}</text><text data-event-opts="{{[['tap',[['clearFilter',['$event']]]]]}}" class="clear-filter" bindtap="__e">清除</text></view></block></view><view class="operation-list"><block wx:for="{{$root.l0}}" wx:for-item="operation" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['toOperationDetail',['$0'],[[['operationList','id',operation.$orig.id]]]]]]]}}" class="operation-item" bindtap="__e"><view class="operation-header"><view class="operation-type">{{operation.$orig.operationType}}</view><view class="{{['priority-badge','getPriorityClass{operation.priority}']}}">{{''+operation.m0+''}}</view></view><view class="operation-content"><text class="content-text">{{operation.$orig.operationContent}}</text></view><view class="route-info"><text class="start-station">{{operation.$orig.startStationName}}</text><text class="arrow">→</text><text class="end-station">{{operation.$orig.endStationName}}</text></view><view class="time-info"><text class="time-label">计划时间：</text><text class="time-text">{{operation.m1+" - "+operation.m2}}</text></view><view class="operation-details"><text class="operator">{{"作业员："+operation.$orig.operator}}</text><text class="car-count">{{"车辆："+operation.$orig.carCount+"辆"}}</text></view><view class="operation-footer"><view class="{{['status','getStatusClass{operation.status}']}}">{{operation.m3}}</view><view class="{{['safety-check',operation.$orig.safetyCheck?'checked':'unchecked']}}">{{''+(operation.$orig.safetyCheck?'已检查':'未检查')+''}}</view></view></view></block></view></view></view>